{
  "name": "@kizo/shared",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "generated"
  ],
  "scripts": {
    "build": "tsc",
    "gen:validate": "redocly lint openapi.yaml",
    "gen:zod": "mkdir -p src/generated && openapi-zod-client openapi.yaml -o src/generated/api.ts --export-schemas --export-types --with-docs --with-description",
    "gen:all": "pnpm run gen:validate && pnpm run gen:zod"
  },
  "dependencies": {
    "openapi-zod-client": "^1.18.3"
  },
  "devDependencies": {
    "@redocly/cli": "^2.12.0"
  }
}
