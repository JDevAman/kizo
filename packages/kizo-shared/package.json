{
  "name": "@kizo/shared",
  "version": "1.0.0",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src",
    "generated"
  ],
  "scripts": {
    "gen:types": "openapi-typescript openapi.yaml -o generated/openapi-types.ts",
    "gen:zod": "mkdir -p generated && openapi-zod-client openapi.yaml -o generated/zod-schemas.ts --export-schemas --export-types --with-docs --with-description --base-url http://localhost:3000/api/v1",
    "gen:validate": "redocly lint openapi.yaml",
    "gen:all": "pnpm run gen:validate && pnpm run gen:zod"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.1.1",
    "@zodios/core": "^10.9.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@redocly/cli": "^2.12.0",
    "@repo/typescript-config": "workspace:*",
    "openapi-typescript": "^7.10.1",
    "openapi-zod-client": "^1.18.3",
    "prettier": "^3.0.0",
    "typescript": "latest"
  }
}
