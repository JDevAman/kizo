generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --- ENUMS ---
enum Role {
  USER
  MERCHANT
  ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  UNVERIFIED
}

enum AuthProvider {
  LOCAL
  GOOGLE
  GITHUB
}

enum TxStatus {
  PROCESSING
  SUCCESS
  FAILED
}

enum BankTransferStatus {
  PROCESSING
  SUCCESS
  FAILED
}

enum TxType {
  TRANSFER // User to User
  DEPOSIT // OnRamp
  WITHDRAWAL // OffRamp
}

// --- MODELS ---

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  phone     String?    @unique
  firstName String
  lastName  String
  password  String?
  avatar    String?
  status    UserStatus @default(ACTIVE)
  role      Role       @default(USER)

  // Relations
  UserBalance          UserBalance?
  RefreshTokens        RefreshToken[]
  transactionsSent     Transaction[]  @relation("SentTx")
  transactionsReceived Transaction[]  @relation("ReceivedTx")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([phone])
  @@index([email])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String   @unique
  userId    String
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

model UserBalance {
  id      String @id @default(uuid())
  userId  String @unique
  balance BigInt @default(0)
  locked  BigInt @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Restrict)

  @@map("user_balances")
}

model Transaction {
  id              String   @id @default(uuid())
  amount          BigInt
  status          TxStatus @default(PROCESSING)
  type            TxType
  idempotencyKey  String?
  createdByUserId String

  referenceId  String        @unique @default(uuid())
  description  String?
  bankTransfer BankTransfer?

  // Relations
  fromUserId String? // Null for DEPOSIT (external -> wallet)
  fromUser   User?   @relation("SentTx", fields: [fromUserId], references: [id])

  toUserId String? // Null for WITHDRAWAL (wallet -> external)
  toUser   User?   @relation("ReceivedTx", fields: [toUserId], references: [id])

  createdAt   DateTime  @default(now())
  processedAt DateTime?

  @@unique([createdByUserId, idempotencyKey, type])
  @@index([fromUserId, createdAt])
  @@index([toUserId, createdAt])
  @@map("transactions")
}

// Bank transfer requests/responses (mock bank)
model BankTransfer {
  id          String   @id @default(uuid())
  externalRef String?  @unique
  amount      BigInt
  status      TxStatus @default(PROCESSING)
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactionId String      @unique
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@index([transactionId])
  @@map("bank_transfers")
}
