generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// --- ENUMS ---
enum Role {
  USER
  MERCHANT
  ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  UNVERIFIED
}

enum AuthProvider {
  LOCAL
  GOOGLE
  GITHUB
}

enum TxStatus {
  PROCESSING
  SUCCESS
  FAILED
}

enum BankTransferStatus {
  PROCESSING
  SUCCESS
  FAILED
}

enum TxType {
  TRANSFER // User to User
  DEPOSIT // OnRamp
  WITHDRAWAL // OffRamp
}

// --- MODELS ---

model User {
  id        String     @id @default(uuid())
  email     String?    @unique
  phone     String?    @unique
  firstName String
  lastName  String
  password  String?
  avatar    String?
  status    UserStatus @default(ACTIVE)
  role      Role       @default(USER)

  // Relations
  UserBalance          UserBalance?
  RefreshTokens        RefreshToken[]
  transactionsSent     Transaction[]  @relation("SentTx")
  transactionsReceived Transaction[]  @relation("ReceivedTx")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([phone])
  @@index([email])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String   @unique
  userId    String
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

model UserBalance {
  id      String @id @default(uuid())
  userId  String @unique
  balance BigInt @default(0)
  locked  BigInt @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Restrict)

  @@map("user_balances")
}

model Transaction {
  id              String   @id @default(uuid())
  amount          BigInt
  status          TxStatus @default(PROCESSING)
  type            TxType
  idempotencyKey  String?  @unique
  createdByUserId String

  referenceId  String        @unique @default(uuid())
  description  String?
  bankTransfer BankTransfer?

  // Relations
  fromUserId String? // Null for DEPOSIT (external -> wallet)
  fromUser   User?   @relation("SentTx", fields: [fromUserId], references: [id])

  toUserId String? // Null for WITHDRAWAL (wallet -> external)
  toUser   User?   @relation("ReceivedTx", fields: [toUserId], references: [id])

  createdAt   DateTime  @default(now())
  processedAt DateTime?

  @@unique([createdByUserId, idempotencyKey])
  @@index([fromUserId])
  @@index([toUserId])
  @@map("transactions")
}

model Merchant {
  id          String   @id @default(uuid())
  name        String
  email       String?  @unique
  phone       String?  @unique
  googleId    String? // for Google login
  merchantKey String? // api key for webhook / integration
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  balance     MerchantBalance?
  settlements Settlement[]
  webhooks    MerchantWebhook[]

  @@map("merchants")
}

model MerchantBalance {
  id         String   @id @default(uuid())
  merchantId String   @unique
  balance    BigInt   @default(0)
  updatedAt  DateTime @updatedAt

  merchant Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@map("merchant_balances")
}

model Settlement {
  id          String    @id @default(uuid())
  merchantId  String
  amount      BigInt
  status      TxStatus  @default(PROCESSING)
  scheduledAt DateTime
  processedAt DateTime?

  merchant  Merchant @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([merchantId])
  @@map("settlements")
}

model MerchantWebhook {
  id         String   @id @default(uuid())
  merchantId String
  url        String
  secret     String
  events     String[] // ["payment.succeeded", "settlement.processed"]
  createdAt  DateTime @default(now())

  merchant Merchant             @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  logs     MerchantWebhookLog[]

  @@map("webhooks")
}

model MerchantWebhookLog {
  id          String    @id @default(uuid())
  webhookId   String
  payload     Json
  statusCode  Int?
  response    String?
  attempts    Int       @default(0)
  lastAttempt DateTime?

  webhook   MerchantWebhook @relation(fields: [webhookId], references: [id], onDelete: Cascade)
  createdAt DateTime        @default(now())

  @@index([webhookId])
  @@map("webhook_logs")
}

// Bank transfer requests/responses (mock bank)
model BankTransfer {
  id          String   @id @default(uuid())
  externalRef String?
  amount      BigInt
  status      TxStatus @default(PROCESSING)
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactionId String      @unique
  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@index([transactionId])
  @@map("bank_transfers")
}
