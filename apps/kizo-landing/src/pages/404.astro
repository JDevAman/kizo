---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Page Not Found – Kizo">
  <section class="min-h-screen bg-black flex items-center justify-center px-4">
    <div class="max-w-2xl mx-auto text-center">
      <div class="mb-8">
        <div
          class="text-8xl lg:text-9xl font-thin bg-gradient-to-r from-cyan-400 to-blue-400 bg-clip-text text-transparent mb-4"
        >
          404
        </div>
        <div
          class="w-32 h-1 bg-gradient-to-r from-cyan-400 to-blue-400 mx-auto rounded-full opacity-50"
        >
        </div>
      </div>

      <h1 class="text-3xl lg:text-4xl font-thin text-white mb-4">
        Page Not Found
      </h1>

      <p class="text-xl text-slate-400 mb-12">
        The page you’re looking for doesn’t exist or has been moved.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="inline-flex h-14 px-6 items-center justify-center rounded-lg bg-cyan-500/10 text-cyan-400 border border-cyan-500/30 hover:bg-cyan-500/20 transition"
        >
          Go Home
        </a>

        <a
          href="/support"
          class="inline-flex h-14 px-6 items-center justify-center rounded-lg border border-slate-700 text-slate-300 hover:text-white hover:border-cyan-500/50 transition"
        >
          Get Help
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
