---
import BaseLayout from "../layouts/BaseLayout.astro";
import {
  SupportHeroContent,
  SupportOptionGrid,
  FAQContent,
  SupportSystemStatus,
  SupportContactForm,
} from "@kizo/ui";

import {
  MessageCircle,
  Mail,
  HelpCircle,
  Zap,
  Book,
  CheckCircle,
} from "lucide-react";
---

<BaseLayout title="Support – Kizo">
  <SupportHeroContent />

  <SupportOptionGrid
    options={[
      {
        icon: MessageCircle,
        title: "Live Chat",
        description: "Get instant help",
        availability: "Available 24/7",
        action: "Start Chat",
        color: "text-green-400",
      },
      {
        icon: Mail,
        title: "Email Support",
        description: "Response within 24 hours",
        availability: "24h",
        action: "Send Email",
        color: "text-blue-400",
      },
    ]}
  />

  <FAQContent
    faqs={[
      {
        category: "general",
        question: "How do I create an account?",
        answer: "Click 'Sign Up' on the homepage and follow the instructions.",
      },
      {
        category: "payments",
        question: "How long do transfers take?",
        answer:
          "Domestic transfers are instant; international transfers take 1–3 days.",
      },
      {
        category: "billing",
        question: "Can I cancel a payment?",
        answer:
          "Payments are final once processed. Please double-check before sending.",
      },
      {
        category: "technical",
        question: "When will MFA be available?",
        answer: "Multi-factor authentication is planned and coming soon.",
      },
    ]}
    categories={[
      { id: "general", label: "General", icon: HelpCircle },
      { id: "payments", label: "Payments", icon: Zap },
      { id: "billing", label: "Billing", icon: CheckCircle },
      { id: "technical", label: "Technical", icon: Book },
    ]}
  />

  <SupportSystemStatus />
  <SupportContactForm />
</BaseLayout>
